<%- include("partials/header") %>
<main class="team-detail-container">
    <section class="team-header">
            <img src="<%= team.imageUrl %>" 
                height = "200px"
                width = "200px"
                alt="<%= team.name %> Logo"
                onerror="this.src='/images/default_team.png'">
        <article class="team-info">
            <h1><%= team.name %></h1>
            <div class="team-meta">
                <span class="established">
                    <i class="fas fa-calendar-alt"></i> Since <%= new Date(team.dateOfExistence).getFullYear() %>
                </span>
                <span class="championships">
                    <i class="fas fa-trophy"></i> <%= team.amountOfChampionships %> Championships
                </span>
                <span class="wins">
                    <i class="fas fa-flag-checkered"></i> <%= team.amountOfWins %> Wins
                </span>
            </div>
        </article>
    </section>

    <section class="team-description">
        <h2>Team Description</h2>
        <p><%= team.description %></p>
    </section>

    <section class="current-drivers">
        <h2>Current Drivers</h2>
        <article class="drivers-grid">
            <% drivers.forEach(driver => { %>
            <div class="driver-card">
                <a href="/driver/<%= driver.id %>" class="driver-link">
                    <img src="<%= driver.imageUrl %>"
                         alt="<%= driver.name %>"
                         class="driver-image"
                         onerror="this.src='/images/default_driver.jpg'">
                    <div class="driver-info">
                        <h3><%= driver.name %></h3>
                        <span class="driver-number">#<%= driver.driverNumber %></span>
                        <span class="nationality"><%= driver.nationality %> </span>
                    </div>
                </a>
            </div>
            <% }); %>
        </article>
    </section>
    <a href="/teams" class="button">
        <i class="fas fa-arrow-left"></i> Back to Teams
    </a>
</main>
<%- include("partials/footer") %>